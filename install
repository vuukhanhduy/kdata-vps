#!/bin/sh

cd ~
if [ -d /opt/kdata_vps ]; then
rm -rf /opt/kdata_vps/*
rm -rf /opt/kdata_vps
sleep 2
fi

sudo yum -y install wget

#
cd ~
wget --no-check-certificate -q https://raw.githubusercontent.com/vuukhanhduy/kdata-vps/master/scripts/kdata/menu/git-clone
chmod +x /root/git-clone
bash /root/git-clone

cd /opt/kdata_vps
chmod +etup
bash setup
